            {{ form_widget(form.total_finisher) }}
            </br>
            {{ form_label(form.ranking, 'Place') }} 
            {{ form_widget(form.ranking) }}
            </br>
            {{ form_label(form.comment, 'Commentaire') }} 
            {{ form_widget(form.comment) }}
        </div>
    </div>

    <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
