{{ form_start(form) }}

    <div class="form-row">
        <div class="form-group col-md-6">
            {{ form_label(form.event, 'Evènement') }} 
            {{ form_widget(form.event) }}
            Si l'évènement n'apparait pas dans  la liste, vous pouvez le créer
            <a href="{{ path('event_new') }}">ici</a>
            </br>
            {{ form_label(form.name, 'Nom de la course') }} 
            {{ form_widget(form.name) }}
            </br>
            {{ form_label(form.date, 'Date') }} 
            {{ form_widget(form.date) }}
            </br>
            {{ form_label(form.total_distance, 'Distance totale (pour une course autre qu\'un triathlon)') }}
            {{ form_widget(form.total_distance) }}
            </br>
            {{ form_label(form.swim_distance, 'Distance en mètres natation (pour un triathlon)') }} 
            {{ form_widget(form.swim_distance) }}
            </br>
            {{ form_label(form.bike_distance, 'Distance en km vélo (pour un triathlon)') }} 
            {{ form_widget(form.bike_distance) }}
            </br>
            {{ form_label(form.run_distance, 'Distance en km course à pied (pour un triathlon)') }} 
            {{ form_widget(form.run_distance) }}
            </br>
            {{ form_label(form.total_time, 'Temps total') }} 
            <input type="time" step="1">
            {{ form_widget(form.total_time) }}
            </input>
            </br>
            {{ form_label(form.swim_time, 'Temps course à pied (pour un triathlon)') }} 
            {{ form_widget(form.swim_time) }}
            </br>
            {{ form_label(form.bike_time, 'Temps vélo (pour un triathlon)') }} 
            {{ form_widget(form.bike_time) }}
            </br>
            {{ form_label(form.run_time, 'Temps course-à-pied (pour un triathlon)') }} 
            {{ form_widget(form.run_time) }}
            </br>
            {{ form_label(form.vertical_gain, 'Dénivelé positif (pour un trail)') }} 
